<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <ReactiveSequence>
            <RetryUntilSuccessful num_attempts="4">
                <Inverter>
                    <Sequence>
                        <Action ID="GetWaypoint2" waypoint="{wp}" wp_id="next"/>
                        <Action ID="Move2" goal="{wp}"/>
                        <Inverter>
                            <Action ID="Turn"/>
                        </Inverter>
                    </Sequence>
                </Inverter>
            </RetryUntilSuccessful>
            <Sequence>
                <Action ID="GetWaypoint2" waypoint="{wp}" wp_id="next"/>
                <Action ID="Move2" goal="{wp}"/>
            </Sequence>
        </ReactiveSequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="GetWaypoint2">
            <output_port default="{wp}" name="waypoint"/>
            <input_port default="next" name="wp_id"/>
        </Action>
        <Action ID="Move2">
            <input_port default="{wp}" name="goal"/>
        </Action>
        <Action ID="Turn"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
